<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/defs/tiles-def.xml</value>
				<value>/WEB-INF/defs/table-theme/subrule-views.xml</value>
				<value>/WEB-INF/defs/table-theme/rule-views.xml</value>
				<value>/WEB-INF/defs/table-theme/operator-views.xml</value>
				<value>/WEB-INF/defs/table-theme/attribute-views.xml</value>
				<value>/WEB-INF/defs/table-theme/model-views.xml</value>
			</list>
		</property>
	</bean>


</beans>